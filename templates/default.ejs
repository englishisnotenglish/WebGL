<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
    <title><%= htmlWebpackPlugin.options.title %></title>
    <!-- <link  href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" ></link> -->
    <style>
      html, body {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
      }

      #canvas {
                border: 1px solid black;
                width: 800px;
                height: 800px;
      }
    </style>
  </head>
  <body>
      <canvas id="canvas" width="800px" height="800px"></canvas>
      <input id="angle"  min="0" max="360" value="0" type="range"/>

    <script src="./lib/webgl-utils.js"></script>
    <script src="./lib/webgl-debug.js"></script>
    <script src="./lib/cuon-utils.js"></script>
    <script>
      function grid(w, h) {
        var canvas = document.getElementById('grid');

        var d = {
          w: canvas.offsetWidth,
          h: canvas.offsetHeight
        };

        canvas.setAttribute('width', d.w);
        canvas.setAttribute('height', d.h);

        var context = canvas.getContext('2d');

        var i;

        for (i = 0; i < d.w; i += w) {
          context.beginPath();
          context.strokeStyle = 'red';
          context.moveTo(i, 0);
          context.lineTo(i, d.h);
          context.stroke();
        }

        for (i = 0; i < d.h; i += h) {
          context.beginPath();
          context.strokeStyle = 'red';
          context.moveTo(0, i);
          context.lineTo(d.w, i);
          context.stroke();
        }
      }
    </script>
  </body>
</html>
